<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <property name="LOG_FILE"       value="/home/pi/log/nmea.log"/>
    <property name="ERROR_LOG_FILE" value="/home/pi/log/error.log"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>%msg%n</Pattern>
        </encoder>
    </appender>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>%d{HH:mm:ss.SSS} [%t] %-5level %logger.%M\(%line\) - %msg%n</Pattern>
        </encoder>
    </appender>

    <appender name="ERROR_FILE" class="ch.qos.logback.core.FileAppender">
        <file>${ERROR_LOG_FILE}</file>
        <append>true</append>
        <immediateFlush>true</immediateFlush>
        <encoder>
            <Pattern>%d{HH:mm:ss.SSS} [%t] %-5level %logger.%M\(%line\) - %msg%n</Pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/archived/app.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>4MB</maxFileSize>
            <totalSizeCap>40MB</totalSizeCap>
            <maxHistory>60</maxHistory>
        </rollingPolicy>
        <encoder>
            <Pattern>%d{HH:mm:ss.SSS} [%t] %-5level %logger.%M\(%line\) - %msg%n</Pattern>
        </encoder>
    </appender>

    <root level="error">
        <appender-ref ref="ERROR_FILE"/>
        <appender-ref ref="FILE"/>
    </root>

    <logger name="com.capitanperegrina" level="info" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>

</configuration>